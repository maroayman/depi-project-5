{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::my-unique-static-website-bucket-123456",
        "arn:aws:s3:::my-unique-static-website-bucket-123456/*"
      ]
    }
  ]
}
